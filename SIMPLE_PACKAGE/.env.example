# Mbeki Healthcare Patient Management System
# Environment Configuration
# Developed by Champs Group - https://www.champsafrica.com

# Database Configuration
DB_HOST=localhost
DB_NAME=mbeki_healthcare
DB_USER=your_database_username
DB_PASS=your_database_password

# Email Configuration (for error reporting)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password
ERROR_EMAIL=info@champsafrica.com

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ENCRYPTION_KEY=your_32_character_encryption_key_here

# System Settings
SYSTEM_NAME=Mbeki Healthcare Patient Management System
DEVELOPER=Champs Group
DEVELOPER_WEBSITE=https://www.champsafrica.com
SYSTEM_VERSION=1.0.0

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Backup Settings
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Debug Settings (set to false in production)
DEBUG_MODE=false
LOG_ERRORS=true
DISPLAY_ERRORS=false